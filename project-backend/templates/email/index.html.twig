{% extends 'base.html.twig' %}

{% block title %}Hello EmailController!{% endblock %}

{% block body %}
  
<div class="container-lg">
    <div class="row">
        <div class="container-lg">
            <table class="table table-striped table-dark table-borderless table-hover table-responsive">
                <thead>
                    <tr> 
                        <th scope="col" class="col-lg-4">Name</th>
                        <th scope="col">Symbol</th>
                        <th scope="col">Price</th>        
                    </tr>
                </thead>
                <tbody>
                            {% for coin in type %}
                                <tr> 
                                    <td>{{coin.name}}</td> 
                                    <td>{{coin.symbol}}</td>
                                    <td>${{coin.Price}}</td>
                                </tr>
                            {% endfor %}
                     
                </tbody>
            
            </table>
        </div>
    </div>  
  
</div>
{% endblock %}
